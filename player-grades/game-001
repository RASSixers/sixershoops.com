<script>
// Player grades data
const players = [
  { name: 'Joel Embiid', position: 'C', grade: 'A', points: 28, rebounds: 10, assists: 3, comment: 'Dominant performance in the paint, controlling both ends of the floor.' },
  { name: 'Tyrese Maxey', position: 'PG', grade: 'A-', points: 22, rebounds: 3, assists: 8, comment: 'Excellent ball handling and playmaking despite tough defensive pressure.' },
  { name: 'Paul George', position: 'SF', grade: 'B+', points: 18, rebounds: 6, assists: 4, comment: 'Solid all-around game with key defensive stops in crunch time.' },
  { name: 'Kyle Lowry', position: 'PG', grade: 'B', points: 8, rebounds: 2, assists: 5, comment: 'Smart floor general, managing the offense effectively throughout.' },
  { name: 'Jalen McDaniels', position: 'PF', grade: 'B-', points: 10, rebounds: 7, assists: 1, comment: 'Provided solid depth scoring and rebounding off the bench.' },
  { name: 'Guerschon Yabusele', position: 'PF', grade: 'B', points: 12, rebounds: 8, assists: 1, comment: 'Aggressive on the boards and physical defense.' },
  { name: 'Caleb Martin', position: 'SF', grade: 'C+', points: 5, rebounds: 4, assists: 1, comment: 'Limited offensive output but showed defensive effort.' },
  { name: 'Andre Drummond', position: 'C', grade: 'B', points: 8, rebounds: 12, assists: 1, comment: 'Dominated the boards with 12 rebounds and strong pick-and-roll defense.' }
];

function renderGrades() {
  const container = document.getElementById('grades-container');
  
  container.innerHTML = players.map(player => {
    const gradeClass = player.grade.split('+')[0].split('-')[0].toLowerCase();
    const shortGrade = player.grade.split('+')[0].split('-')[0];
    
    return `
      <div class="player-grade">
        <div class="grade-badge ${gradeClass}">${shortGrade}</div>
        <div class="player-info">
          <div class="player-name">${player.name}</div>
          <div class="player-position">${player.position}</div>
          <div class="player-stats">
            <div class="stat">
              <span class="stat-value">${player.points}</span>
              <span class="stat-label">PTS</span>
            </div>
            <div class="stat">
              <span class="stat-value">${player.rebounds}</span>
              <span class="stat-label">REB</span>
            </div>
            <div class="stat">
              <span class="stat-value">${player.assists}</span>
              <span class="stat-label">AST</span>
            </div>
          </div>
          <p class="player-comment">${player.comment}</p>
        </div>
      </div>
    `;
  }).join('');
}

// Initialize
document.addEventListener('DOMContentLoaded', () => {
  renderGrades();
});
</script>

